extends layout

block content
  h2 My Projects
  ul
    each project in projects
      li
        strong #{project.title}
        p #{project.description}
        p Technologies: #{project.technologies.join(", ")}
        p Year: #{project.year}
        a(href=`/projects/edit/${project._id}`) ✏️ Edit
        form(action=`/projects/delete/${project._id}` method="POST" style="display:inline")
          button(type="submit" onclick="return confirm('Are you sure?')") ❌ Delete